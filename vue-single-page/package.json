{
  "name": "vue-single-page",
  "private": true,
  "description": "A single-page development template which base on vue",
  "author": "cntanglijun",
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --config config/webpack.dev.config.js --colors",
    "build": "cross-env NODE_ENV=production webpack --config config/webpack.prod.config.js --colors",
    "serve": "node prod.server.js",
    "lint": "eslint src --ext .vue,.js",
    "test:unit": "karma start --single-run",
    "test": "npm run lint && npm run test:unit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
